# ONE Engine Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# Supabase Configuration
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# Thirdweb Configuration
# =============================================================================
THIRDWEB_CLIENT_ID=your-client-id
THIRDWEB_SECRET_KEY=your-secret-key

# =============================================================================
# Trading Configuration (Bybit)
# =============================================================================
BYBIT_API_KEY=your-api-key
BYBIT_API_SECRET=your-api-secret
BYBIT_TESTNET=true

# =============================================================================
# AI Configuration (OpenAI)
# =============================================================================
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4o

# =============================================================================
# Fiat On/Off Ramp Configuration (Onramper)
# Get your API key at: https://onramper.com
# =============================================================================
ONRAMPER_API_KEY=your-onramper-api-key
ONRAMPER_WEBHOOK_SECRET=your-onramper-webhook-secret
# Public key for client-side SDK components
NEXT_PUBLIC_ONRAMPER_API_KEY=your-onramper-api-key

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your-secure-jwt-secret-at-least-32-chars
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your-32-character-encryption-key

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# Redis Configuration (Optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:4000
